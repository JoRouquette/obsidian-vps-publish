{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Docker: dev up",
      "type": "shell",
      "command": "docker",
      "args": [
        "compose",
        "-f",
        "docker-compose.yml",
        "-f",
        "docker-compose.dev.yml",
        "build",
        "--no-cache",
        "&&",
        "docker",
        "compose",
        "-f",
        "docker-compose.yml",
        "-f",
        "docker-compose.dev.yml",
        "up",
        "-d",
        "--remove-orphans",
        "--force-recreate"
      ],
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Docker: dev down",
      "type": "shell",
      "command": "docker",
      "args": ["compose", "-f", "docker-compose.yml", "-f", "docker-compose.dev.yml", "down", "-v"],
      "problemMatcher": [],
      "group": "none"
    },
    {
      "label": "Launch site",
      "type": "shell",
      "command": "npx",
      "args": ["nx", "serve", "site", "--skip-nx-cache"],
      "problemMatcher": []
    },
    {
      "label": "Launch node",
      "type": "shell",
      "command": "npx",
      "args": ["nx", "serve", "node", "--skip-nx-cache"],
      "problemMatcher": []
    },
    {
      "label": "Launch all",
      "dependsOn": ["Launch site", "Launch node"],
      "dependsOrder": "parallel",
      "problemMatcher": []
    },
    {
      "label": "Plugin: dev (watch)",
      "type": "shell",
      "command": "npx",
      "args": ["nx", "run", "obsidian-vps-publish:dev"],
      "problemMatcher": []
    },
    {
      "label": "Plugin: build",
      "type": "shell",
      "command": "npx",
      "args": ["nx", "run", "obsidian-vps-publish:build", "--tui false", "--skip-nx-cache"],
      "problemMatcher": []
    },
    {
      "label": "Plugin: package",
      "type": "shell",
      "command": "npx",
      "args": ["nx", "run", "obsidian-vps-publish:package", "--tui false"],
      "dependsOn": ["Plugin: build"],
      "problemMatcher": []
    },
    {
      "label": "Dev refresh",
      "dependsOn": ["Docker: dev up", "Plugin: package"],
      "dependsOrder": "parallel",
      "problemMatcher": []
    },
    {
      "label": "Build all",
      "type": "shell",
      "command": "npm",
      "args": ["run", "build", "--", "--skip-nx-cache"],
      "problemMatcher": []
    },
    {
      "label": "Lint all",
      "type": "shell",
      "command": "npm",
      "args": ["run lint"],
      "problemMatcher": []
    },
    {
      "label": "Lint all --fix",
      "type": "shell",
      "command": "npm",
      "args": ["run lint:fix"],
      "problemMatcher": []
    },
    {
      "label": "Test all",
      "type": "shell",
      "command": "npm",
      "args": ["run test"],
      "problemMatcher": []
    },
    {
      "label": "Format all",
      "type": "shell",
      "command": "npm",
      "args": ["run format:write"],
      "problemMatcher": []
    },
    {
      "label": "Merge current branch to main",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "CURRENT_BRANCH=$(git branch --show-current) && git checkout main && git pull origin main && git merge --no-ff $CURRENT_BRANCH && git push origin main"
      ],
      "problemMatcher": []
    },
    {
      "label": "Complete workflow",
      "type": "shell",
      "command": "bash",
      "args": ["-c", "npm run docs:check && npm run lint && npm run build && npm run test"],
      "problemMatcher": []
    },
    {
      "label": "SSR: Build Angular",
      "type": "shell",
      "command": "npx",
      "args": ["nx", "build", "site", "--configuration=production", "--skip-nx-cache"],
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    },
    {
      "label": "SSR: Copy index.html",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "cp dist/apps/site/browser/index.csr.html dist/apps/site/browser/index.html && echo '‚úÖ index.html created for CSR fallback'"
      ],
      "problemMatcher": [],
      "dependsOn": ["SSR: Build Angular"]
    },
    {
      "label": "SSR: Launch Server",
      "type": "shell",
      "command": "npx",
      "args": ["nx", "serve", "node", "--skip-nx-cache"],
      "problemMatcher": [],
      "isBackground": true,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": true
      },
      "dependsOn": ["SSR: Copy index.html"]
    },
    {
      "label": "SSR: Test HTML Output",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "echo 'üîç Testing SSR HTML output...' && sleep 2 && curl -s http://localhost:3000/ | head -100 | grep -E '<title>|<meta name=|<meta property=' || echo '‚ö†Ô∏è  No meta tags found (SSR might not be working)'"
      ],
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "SSR: Validate SEO",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "echo 'üìä SEO Validation Report' && echo '========================' && echo '' && echo '1. Testing robots.txt:' && curl -s http://localhost:3000/robots.txt | head -10 && echo '' && echo '2. Testing sitemap.xml:' && curl -s http://localhost:3000/sitemap.xml | head -15 && echo '' && echo '3. Testing meta tags:' && curl -s http://localhost:3000/ | grep -E '<title>|<meta name=\"description\"|<link rel=\"canonical\"' || echo '‚ö†Ô∏è  Meta tags not found' && echo '' && echo '4. Testing JSON-LD:' && curl -s http://localhost:3000/ | grep -o 'application/ld+json' && echo '‚úÖ Validation complete'"
      ],
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated"
      }
    },
    {
      "label": "SSR: Complete Setup",
      "dependsOn": ["SSR: Build Angular", "SSR: Copy index.html"],
      "dependsOrder": "sequence",
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      }
    },
    {
      "label": "SSR: Full Restart",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "echo 'üîÑ Full SSR Restart...' && npx nx reset && rm -rf dist/apps/site && npx nx build site --configuration=production --skip-nx-cache && cp dist/apps/site/browser/index.csr.html dist/apps/site/browser/index.html && npx nx build node --skip-nx-cache && echo '‚úÖ Build complete. Now run: SSR: Launch Server'"
      ],
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated",
        "clear": true
      }
    },
    {
      "label": "SSR: Quick Test (no rebuild)",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "echo '‚ö° Quick SSR Test' && echo '=================' && echo '' && curl -s http://localhost:3000/ 2>&1 | head -80 | grep -E '<title>|<meta|<h1|<link rel=\"canonical\"' || echo '‚ùå Server not running or SSR disabled'"
      ],
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    }
  ]
}
