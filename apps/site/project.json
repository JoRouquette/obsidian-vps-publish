{
  "name": "site",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "app",
  "sourceRoot": "apps/site/src",
  "tags": ["layer:ui", "type:app"],
  "targets": {
    "build": {
      "executor": "@angular/build:application",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/site",
        "browser": "apps/site/src/main.ts",
        "server": "apps/site/src/main.server.ts",
        "prerender": false,
        "ssr": true,
        "polyfills": ["zone.js"],
        "tsConfig": "apps/site/tsconfig.app.json",
        "inlineStyleLanguage": "scss",
        "assets": ["apps/site/src/favicon.ico", "apps/site/src/assets"],
        "styles": [
          "apps/site/src/styles.scss",
          "node_modules/leaflet.fullscreen/dist/Control.FullScreen.css"
        ],
        "allowedCommonJsDependencies": ["leaflet", "leaflet.fullscreen"]
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "700kb",
              "maximumError": "1mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "500kb",
              "maximumError": "1Mb"
            }
          ],
          "outputHashing": "all"
        },
        "development": {
          "optimization": false,
          "extractLicenses": false,
          "sourceMap": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "continuous": true,
      "executor": "@angular/build:dev-server",
      "configurations": {
        "production": {
          "buildTarget": "site:build:production"
        },
        "development": {
          "buildTarget": "site:build:development"
        }
      },
      "defaultConfiguration": "development"
    },
    "extract-i18n": {
      "executor": "@angular/build:extract-i18n",
      "options": {
        "buildTarget": "site:build"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{workspaceRoot}/coverage/apps/site"],
      "options": {
        "lintFilePatterns": [
          "apps/site/**/*.ts",
          "!apps/site/e2e/**",
          "!apps/site/playwright.config.ts",
          "!apps/site/.angular/**"
        ]
      }
    },
    "lint:fix": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{workspaceRoot}/coverage/apps/site"],
      "options": {
        "lintFilePatterns": [
          "apps/site/**/*.ts",
          "!apps/site/e2e/**",
          "!apps/site/playwright.config.ts",
          "!apps/site/.angular/**"
        ],
        "fix": true
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/site/jest.config.ts",
        "tsConfig": "apps/site/tsconfig.spec.json"
      },
      "configurations": {
        "ci": {
          "codeCoverage": true
        }
      }
    },
    "serve-static": {
      "continuous": true,
      "executor": "@nx/web:file-server",
      "options": {
        "buildTarget": "site:build",
        "staticFilePath": "dist/apps/site/browser",
        "spa": true
      }
    },
    "serve-ssr": {
      "executor": "@angular/build:dev-server",
      "configurations": {
        "development": {
          "buildTarget": "site:build:development"
        },
        "production": {
          "buildTarget": "site:build:production"
        }
      },
      "defaultConfiguration": "development",
      "options": {
        "port": 4200
      }
    },
    "format": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx prettier --check \"apps/site/**/*.{ts,scss,html,json,md}\""
      }
    },
    "format:write": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx prettier --write \"apps/site/**/*.{ts,scss,html,json,md}\""
      }
    },
    "e2e": {
      "executor": "@nx/playwright:playwright",
      "outputs": ["{projectRoot}/playwright-report", "{projectRoot}/test-results"],
      "options": {
        "config": "apps/site/playwright.config.ts"
      },
      "configurations": {
        "ci": {
          "config": "apps/site/playwright.config.ts"
        }
      }
    }
  }
}
